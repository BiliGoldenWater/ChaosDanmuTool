{
  "name": "chaosdanmutool",
  "productName": "ChaosDanmuTool",
  "version": "0.1.8",
  "description": "A tool for process/view Danmu on bilibili",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "BiliGoldenWater",
    "email": "2439577268@qq.com"
  },
  "license": "",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ChaosDanmuTool"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/window/main/index.html",
                  "js": "./src/window/main/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/window/main/preload.ts"
                  }
                },
                {
                  "html": "./src/window/viewer/index.html",
                  "js": "./src/window/viewer/renderer.tsx",
                  "name": "viewer"
                }
              ]
            },
            "devContentSecurityPolicy": "connect-src *;"
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.60",
    "@electron-forge/maker-deb": "^6.0.0-beta.60",
    "@electron-forge/maker-rpm": "^6.0.0-beta.60",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.60",
    "@electron-forge/maker-zip": "^6.0.0-beta.60",
    "@electron-forge/plugin-webpack": "6.0.0-beta.60",
    "@types/koa": "^2.13.4",
    "@types/koa-static": "^4.0.2",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "css-loader": "^6.0.0",
    "electron": "^16.0.2",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "node-loader": "^2.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.0.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "ws": "^8.2.2"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.16.13",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
